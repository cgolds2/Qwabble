<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="groupProject01.MessagingPage"
             xmlns:local="clr-namespace:groupProject01"
             Title="Messaging">

    <ContentPage.Content>
        <ListView x:Name="msgView" RowHeight="60" ItemTapped="OnTap">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout BackgorundColor="Gray">
                            <Label Text = "{Binding Name}" HorizontalOptions="Start"/>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </ContentPage.Content>
</ContentPage>