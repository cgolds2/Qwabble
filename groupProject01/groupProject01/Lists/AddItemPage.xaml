<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="groupProject01.AddItemPage" 
             xmlns:local="clr-namespace:groupProject01">
    
    <ContentView.Content>
        <StackLayout VerticalOptions="StartAndExpand">
            <Label Text="Add Item Page" VerticalOptions="Center" HorizontalOptions="Center" />

            <Entry x:Name="itemNameTextField" Text="Enter your item's name" />
            <Entry x:Name="itemDetailTextField" Text="Enter extra information for your item" />
            
            <Button x:Name="AddItem" Text="Add Item" Clicked="OnAddItem" />
        </StackLayout>
    </ContentView.Content>
</ContentPage>