<?xml version="1.0" encoding="UTF-8"?>
<ContentPage 
    xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    x:Class="groupProject01.InitialPage"
    xmlns:local="clr-namespace:groupProject01">
  <ContentView.Content>
        <StackLayout BackgroundColor="#dddddd" >
            <StackLayout VerticalOptions="Start">
                <AbsoluteLayout Padding = "0,0,0,-70">
                    <BoxView Color="#90EE90" AbsoluteLayout.LayoutBounds="0,0,1,.5"
          AbsoluteLayout.LayoutFlags="PositionProportional, SizeProportional" />

                    <Label Text="Welcome!" x:Name="TitleLabel" TextColor="#ffffff" FontSize="18"
            LineBreakMode="NoWrap" AbsoluteLayout.LayoutBounds=".65,1,150,67"
            AbsoluteLayout.LayoutFlags="PositionProportional" FontAttributes="Bold" />
                </AbsoluteLayout>

            </StackLayout>
            <StackLayout VerticalOptions="StartAndExpand">
                <!-- START PAGE CODE ****************************************************** -->

                <Button x:Name="Login" Text="Log in" Margin="20,20,20,20" Clicked="OnLogin" />
                <Button x:Name="CreateUser" Text="Create New Account" Clicked ="OnCreateUser"/>


                <!-- END PAGE CODE ****************************************************** -->

            </StackLayout>
            
        </StackLayout>
    </ContentView.Content>
</ContentPage>
