<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="groupProject01.LoginPage"
             xmlns:local="clr-namespace:groupProject01"
             Title="Login">
  
    <ContentView.Content>
        <StackLayout VerticalOptions="StartAndExpand"> 
            <Label Text="Login Screen" VerticalOptions="Center" HorizontalOptions="Center" />

            <Entry x:Name="usernameTextField" Text="Enter your username" />
            <Entry x:Name="passwordTextField" Text="Enter your password" />  
            
            <Button x:Name="Submit" Text="Submit" Clicked="OnSubmit" />
        </StackLayout>

    </ContentView.Content>
</ContentPage>
