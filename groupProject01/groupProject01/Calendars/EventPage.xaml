<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="groupProject01.EventPage"
             xmlns:local="clr-namespace:groupProject01"
             Title="Calendar">
  
<ContentPage.Content>
   <ListView x:Name="calView" RowHeight="60" ItemTapped="OnTap">
      <ListView.ItemTemplate>
        <DataTemplate>
          <ViewCell>
            <StackLayout BackgroundColor="Gray">
              <Label Text =" {Binding name} " HorizontalOptions ="Start"/>
                            <Button Name="AddEvent" Text="Add Event" Clicked="OnAddEvent"/>
                        </StackLayout>
          </ViewCell>
        </DataTemplate>
      </ListView.ItemTemplate>
    </ListView>
  </ContentPage.Content>
</ContentPage>
  